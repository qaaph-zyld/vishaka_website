# ========================
# Database Configuration
# ========================
DATABASE_URL="postgresql://vishaka:your-secure-password@localhost:5432/vishaka?schema=public"
DIRECT_URL="postgresql://vishaka:your-secure-password@localhost:5432/vishaka?schema=public&connection_limit=1"

# ========================
# Application Settings
# ========================
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# ========================
# Authentication
# ========================
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# ========================
# Redis Configuration
# ========================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=86400 # 24 hours in seconds

# ========================
# CORS Configuration
# ========================
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# ========================
# Rate Limiting
# ========================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# Monitoring
# ========================
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# ========================
# External Services
# ========================
SWISS_EPHEMERIS_PATH=./node_modules/swisseph/

# ========================
# File Uploads
# ========================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ========================
# Email Configuration
# ========================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM="Vishaka Astrology <noreply@vishaka.astrology>"

# ========================
# Feature Flags
# ========================
FEATURE_MAINTENANCE_MODE=false
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
